<div class="container">
  <h1 class="text-center mt-10">Vista de Productos</h1>
  {{#if isItemsInArray}}
    <table
      class="table table-dark table-striped mx-auto"
      style="width: 900px; max-width: 90%"
    >
      <thead>
        <tr>
          <th scope="col">Producto</th>
          <th scope="col">Precio</th>
          <th scope="col">Im√°gen</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
          <tr>
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td><img src={{this.thumbnail}} style="width: 30px" /></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No hay productos</p>
  {{/if}}

</div>
<a href="/" class="btn btn-info d-block mx-auto" style="width: 200px">
  Cargar un producto
</a>